{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@/*": ["src/*"],
      "typings/*": ["typings/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "allowJs": true,
    "strict": true
  },
  "include": ["typings/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "noImplicitAny": true,
}
